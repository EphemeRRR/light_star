<div class="user-interests light-star-card-border-top background-white">
  <div class="graph-flex-container">
    <div class="interests-header">
      <h4 class="margin-top-0">Tes interets</h4>
      <% if current_user == @user %>
        <%= render 'modal_profile' %>
      <% end %>
    </div>
    <div class="chart-flex-container">
      <div class="chart-container" style="position: relative; height: 100%; width: 90%;">
        <canvas id="myChart" data-labels="<%= @labels.to_json %>" data-data="<%= @data.to_json %>"></canvas>
      </div>
    </div>
  </div>
</div>
