<!-- Button trigger modal === -->
<button type="button" class="btn interests-modal" data-toggle="modal" data-target="#exampleModalLong">
  Modifiez vos interets
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Selectionnez vos catégories préférées :</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <%= form_tag({controller: "users", action: "recieve_interest_choices"}, method: "post", class: "") do %>
            <div class="row">

            <% SubCategory.all.each_with_index do |sub_category, index| %>
             <div style="padding: 0;"  class="col-xs-6 col-md-4" id="<%= index + 1 %>-sub-category">
                <%= check_box_tag sub_category.id, class: 'checkbox-custom' %>

                <label style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path "#{index + 1}-sub-category" %>);" class="buttton-image" for="<%= index + 1 %>"><%= sub_category.name %></label>
              </div>
            <% end %>
            </div>
            <div class="modal-footer">
              <%= submit_tag "Submit", class: 'btn btn-info', data: { dismiss: "modal" } %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
