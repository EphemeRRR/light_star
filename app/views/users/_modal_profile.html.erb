<!-- Button trigger modal === -->
<button type="button" class="btn interests-modal" data-toggle="modal" data-target="#exampleModalLong">
  Modifiez vos interets
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Selectionnez vos catégories préférées :</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <%= form_tag({controller: "users", action: "skill_scores"}, method: "post", class: "") do %>
            <%= hidden_field_tag('user', value = @user.id) %>
            <div class="row">
            <% count = 1 %>
            <% @scores.each do |score| %>
             <div style="padding: 0;"  class="col-xs-6 col-md-4" id="<%= count %>-sub-category">

                <%= check_box_tag score.id, 'true', score.checked, class: 'checkbox-custom' %>

                <label style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path "#{count}-sub-category" %>);" class="buttton-image <%= 'activated' if score.checked %>" for="<%= score.id %>"><%= score.sub_category.name %></label>
              </div>
              <% count += 1 %>
            <% end %>
            </div>
            <div class="modal-footer">
              <%= submit_tag "Submit", class: 'btn btn-info' %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
