<div class="container">
  <div class="grid-show">
    <div class="wrapper-row">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="iframe-container">
            <iframe src="https://www.youtube.com/embed/<%= video.youtube_id %>?rel=0" allowfullscreen></iframe>
          </div>
            <div class="bottom-video">
              <div class="video-details-wrapper">
                <p><i class="far fa-comments"></i></p>
                <p><i class="far fa-eye"></i></p>
                <div class="icon-wrapper"><i class="far fa-clock"></i> <%= @video.duration_seconds / 60 %>:<%= "%.2i" %(@video.duration_seconds % 60) %>
                </div>
              </div>
              <div id="accordion">
                <div class="card-header" id="headingTwo">
                  <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                      Description ...
                    </button>
                  </h5>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                  <div class="card-body video-content">
                    <%= @video.description %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="recomandation">
        <%= render 'video_recommandation' %>
      </div>
    </div>
  </div>
</div>
