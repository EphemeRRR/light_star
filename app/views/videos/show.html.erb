<h1 class="text-center"><%= @video.title %></h1>

<%= render 'iframe_video', video: @video %>

<div class="container">
  <p>Vidéo d'introduction : <%= @video.introduction %></p>
  <p>Vidéo professionnalisante : <%= @video.pro %></p>
  <p>Vidéo vérifiée : <%= @video.verified %></p>
  <p>Vidéo subcategories :</p>
  <% @video_categories.each do |video_category| %>
    <ul><li><%= video_category.sub_category.name %> => <%= video_category.relevance %>%</li></ul>
  <% end %>
</div>
