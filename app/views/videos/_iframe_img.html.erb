  <div class="row">
    <% @videos.each do |video| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 pad-top-bottom-15">
        <%= link_to video_path(video) do %>
          <div class="card">
            <div class="card-img" style="background-image: url('https://img.youtube.com/vi/<%= video.youtube_id %>/0.jpg')">
              <div class="play-button"><i class="fas fa-play-circle"></i></div>
            </div>
            <div class="card-content">
              <div class="details">
                <p><i class="far fa-comments"></i></p>
                <p><i class="far fa-eye"></i></p>
                <p><i class="far fa-clock"></i> <%= video.duration_seconds / 60 %>:<%= "%.2i" %(video.duration_seconds % 60) %> </p>
              </div>
              <div class="description">
                <p><%= video.title %></p>
              </div>
              <div class="footer">
                <p><%= video.channel %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

