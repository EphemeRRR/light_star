<div class="container">
  <div class="devise-form-wrapper">
    <h2>Se connecter</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs devise-form-custom input-sm">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'devise-form-control' } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'devise-form-control' } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: 'btn-info' %>
      </div>
    <% end %>
    <div class="form-footer-links"><%= render "devise/shared/links" %></div>
  </div>
</div>
