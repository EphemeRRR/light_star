<div class="container">
  <div class="devise-form-wrapper">
    <h2>Resend unlock instructions</h2>
    <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :unlock_token %>
      <div class="form-inputs devise-form-custom input-sm">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'devise-form-control' } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Resend unlock instructions", class: 'btn-info' %>
      </div>
    <% end %>
    <div class="form-footer-links"><%= render "devise/shared/links" %></div>
  </div>
</div>
