 <div class="container">
   <div class="devise-form-wrapper">
    <h2>Changer votre mot de passe</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-inputs devise-form-custom input-sm">
        <%= f.input :password,
                    label: "Nouveau mot de passe",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: 'devise-form-control' } %>
        <%= f.input :password_confirmation, label: "Confirmez votre nouveau mot de passe", required: true, class: 'devise-form-controlv' %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Changer de mot de passe", class: 'btn-info' %>
      </div>
    <% end %>
    <div class="form-footer-links"></div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
