<div class="container">
  <div class="devise-form-wrapper">
    <h2>Oubli√© votre mot de passe?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs devise-form-custom input-sm">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'devise-form-control' } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Envoyer les instructions de renouvellement de mot de passe", class: 'btn-info' %>
      </div>
    <% end %>
    <div class="form-footer-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
